<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/arFragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Texto grande en la parte superior para mostrar el modo -->
    <TextView
        android:id="@+id/modeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        android:gravity="center"
        android:padding="16dp"
        android:text="Modo: Objetos"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <!-- Contenedor para resultados de traducciÃ³n -->
    <FrameLayout
        android:id="@+id/translationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/controlPanel"
        android:visibility="visible">

        <!-- Texto original (detectado) - fondo negro semitransparente -->
        <TextView
            android:id="@+id/originalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- Texto traducido - fondo negro semitransparente, encima del original -->
        <TextView
            android:id="@+id/translatedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Panel de control en la esquina inferior izquierda -->
    <RelativeLayout
        android:id="@+id/controlPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="16dp"
        android:background="#80000000"
        android:gravity="center_vertical">

        <!-- Icono de objetos (izquierda) -->
        <ImageView
            android:id="@+id/objectIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_object" />

        <!-- Switch con indicador -->
        <RelativeLayout
            android:id="@+id/modeToggleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/objectIcon"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/modeToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:thumbTint="@color/white"
                android:trackTint="@color/white"/>

            <ImageView
                android:id="@+id/modeIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_indicator"
                android:visibility="invisible" />
        </RelativeLayout>

        <!-- Icono de texto (derecha) -->
        <ImageView
            android:id="@+id/textIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/modeToggleContainer"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_text" />

        <TextView
            android:id="@+id/originalText"
            style="@style/TranslationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/translatedText"
            style="@style/TranslationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>